      +education([{src: "static/img/logo.gif", from: "2017.07", to: "2019.06", degree: "硕士", Uname: "中山大学", major: "信息科学与计算机学院", exp: ["曾获……", "曾担任……", "曾参与……"]}, {src: "static/img/logo.gif", from: "2013.07", to: "", degree: "学士", Uname: "中山大学", major: "数据科学与计算机学院", exp: ["曾获……", "曾担任……", "曾参与……"]}])
      each val in [1,2,3]
        +profile({src: 'static/img/zerg.jpg', name: '隔壁老王'+val, selfIntro: 'Professional Passionate Programmer', desire: '前端攻城狮 软件攻城狮'})

